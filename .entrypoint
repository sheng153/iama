#!/usr/bin/env bash
set -euo pipefail

DB="/data/dev.db"
SCHEMA="/app/database/schema.sql"
POPULATOR="/app/model/populate_db.py"

if [ ! -f "$DB" ] || [ "$FORCE_DB_INIT" = "1" ]; then
  echo "Inicializando base de datos en $DB"
  sqlite3 "$DB" < "$SCHEMA"

  echo "Populando base de datos."
  python3 "$POPULATOR"
fi

exec "$@"
