
if [ -z "$1" ]; then
    echo "‚ùå Error: Please provide a commit message."
    echo "Usage: $0 \"your commit message\""
    exit 1
fi

COMMIT_MSG="$1"

DOCKER_BUILDKIT=1 docker build -t iama ./model/

